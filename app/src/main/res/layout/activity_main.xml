<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:baselineAligned="false"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/layoutBG"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/tic_tac_toe" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/input1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_above="@id/input4"
                android:layout_alignStart="@id/input4"
                android:layout_marginBottom="15dp"
                android:src="@drawable/tic_tac_toe_x"
                android:text=""
                android:visibility="visible"
                android:background="clear"/>

            <ImageButton
                android:id="@+id/input2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_above="@id/input5"
                android:layout_alignStart="@id/input5"
                android:text=""
                android:layout_marginBottom="15dp"
                android:visibility="visible"
                android:background="clear"/>
            <ImageButton
                android:id="@+id/input3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_above="@id/input6"
                android:layout_alignStart="@id/input6"
                android:text=""
                android:layout_marginBottom="15dp"
                android:background="clear"
                android:visibility="visible"/>
            <ImageButton
                android:id="@+id/input4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:text=""
                android:background="clear"
                android:visibility="visible"/>
            <ImageButton
                android:id="@+id/input5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:background="clear"
                android:visibility="visible"/>

            <ImageButton
                android:id="@+id/input6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text=""
                android:background="clear"
                android:visibility="visible"/>

            <ImageButton
                android:id="@+id/input7"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_below="@id/input4"
                android:layout_alignStart="@id/input4"
                android:text=""
                android:background="clear"
                android:layout_marginTop="15dp"
                android:visibility="visible"/>
            <ImageButton
                android:id="@+id/input8"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_below="@id/input5"
                android:layout_alignStart="@id/input5"
                android:text=""
                android:background="clear"
                android:layout_marginTop="15dp"
                android:visibility="visible"/>
            <ImageButton
                android:id="@+id/input9"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/input6"
                android:layout_alignStart="@id/input6"
                android:text=""
                android:layout_marginTop="15dp"
                android:background="clear"
                android:visibility="visible"/>

            <Button
                android:id="@+id/button_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/button_reset" />
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
